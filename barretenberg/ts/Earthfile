VERSION 0.8

FROM node:18.19.0
WORKDIR /build

# minimum files to download yarn packages
# keep timestamps for incremental builds
COPY --keep-ts --dir .yarn package.json yarn.lock .yarnrc.yml .
RUN yarn --immutable

# other source files
COPY --keep-ts --dir src *.json *.js *.cjs .

# copy over wasm build from cpp folder
COPY ../cpp/+build-wasm/bin/barretenberg.wasm src/barretenberg_wasm/barretenberg-threads.wasm
# TODO for now there is no real single-threaded WASM. See if anyone hits problems.
COPY ../cpp/+build-wasm/bin/barretenberg.wasm src/barretenberg_wasm/barretenberg.wasm
COPY ../cpp/+build-wasm/bin/barretenberg.wasm dest/node/barretenberg_wasm/barretenberg-threads.wasm
COPY ../cpp/+build-wasm/bin/barretenberg.wasm dest/node-cjs/barretenberg_wasm/barretenberg-threads.wasm

build-esm:
    RUN yarn build:esm
    SAVE ARTIFACT /build

build-cjs:
    COPY --keep-ts scripts/cjs_postprocess.sh scripts/
    RUN yarn build:cjs
    SAVE ARTIFACT /build

build-browser:
    RUN yarn build:browser
    SAVE ARTIFACT /build

test-prettier-format:
    RUN yarn formatting

build:
    # collect all our build types
    COPY +build-esm/build /build
    COPY +build-cjs/build /build
    COPY +build-browser/build /build
    # We want to create a pure package, as would be published to npm, for consuming projects.
    RUN yarn pack && tar zxf package.tgz && rm package.tgz && mv package ../ts
    SAVE ARTIFACT /build

test:
    BUILD +test-prettier-format
    RUN yarn test
